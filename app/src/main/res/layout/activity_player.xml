<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/concert2"
    tools:context="com.example.imtiazaminsajid.musicplayer.Player">


    <TextView
        android:id="@+id/nowPlaying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Now Playing"
        android:textSize="29dp"
        android:textColor="#fdfbfb"
        android:textStyle="italic"
        android:layout_marginTop="25dp"
        />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/forwordBT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="50dp" />

    <Button
        android:id="@+id/forwordBT"
        android:textSize="50dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:background="@android:color/transparent"
        android:textColor="#ffffff"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="110dp" />

    <Button
        android:textSize="50dp"
        android:id="@+id/fastBackwordBT"
        android:layout_width="70dp"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/forwordBT"
        android:layout_alignBottom="@+id/forwordBT"
        android:layout_toEndOf="@+id/forwordBT"
        android:layout_toRightOf="@+id/forwordBT"
        android:background="@android:color/transparent"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="110dp" />

    <Button
        android:textSize="50dp"
        android:id="@+id/fastForwordBT"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/nextBT"
        android:layout_alignBottom="@+id/nextBT"
        android:layout_toLeftOf="@+id/nextBT"
        android:layout_toStartOf="@+id/nextBT"
        android:background="@android:color/transparent"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="258dp"
        tools:layout_editor_absoluteY="110dp" />

    <Button
        android:textSize="50dp"
        android:id="@+id/nextBT"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/playBT"
        android:layout_alignBottom="@+id/playBT"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        android:background="@android:color/transparent"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="334dp"
        tools:layout_editor_absoluteY="110dp" />

    <Button
        android:id="@+id/playBT"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:textColor="#ffffff"
        android:textSize="50dp"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="120dp" />
</RelativeLayout>
